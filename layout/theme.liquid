<!doctype html>
<html class="no-js {% if settings.icon_options == "modern" %}modern-icon-set{% endif %} {% if settings.theme_mode_default == "dark" and settings.theme_mode_enabled %} dark{% endif %}" lang="{{ request.locale.iso_code }}"{% if settings.lang_direction contains request.locale.iso_code %} dir="rtl"{% endif %}>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="">
    <meta name="google-site-verification" content="KK-urxvls17mdv7CajD9EHH11mP7g3aKIE6p-BhvPqc" />
    <!-- Google Tag Manager -->
