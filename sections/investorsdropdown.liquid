// reverse lookup: alias -> internal id
function findSectionIdFromAlias(alias) {
  for (const key in aliasMap) {
    if (aliasMap[key] === alias) return key;
  }
  return alias; // fallback to raw id if not in map
}

// use pretty hash (no "section-" prefix)
function setPrettyHash(sectionId) {
  const pretty = aliasMap[sectionId] || sectionId;
  history.replaceState(null, '', '#' + pretty);
}

