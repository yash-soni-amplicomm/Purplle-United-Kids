    // Show target section
    const targetSection = document.getElementById('section-' + sectionId);
    if (targetSection) {
      targetSection.classList.add('active');
    }
  }

  function setActiveNav(sectionId) {
    // Remove active class from all nav links
    document.querySelectorAll('.ir-nav-link').forEach(link => {
      link.classList.remove('active');
    });

    // Add active class to target nav link
    const targetNav = document.querySelector('.ir-nav-link[data-section="' + sectionId + '"]');
    if (targetNav) {
      targetNav.classList.add('active');
    }
  }

  function showDropdownContent(contentId) {
    // Hide all content divs in current section
    const activeSection = document.querySelector('.ir-content-section.active');
    if (activeSection) {
      activeSection.querySelectorAll('[id^="content-"]').forEach(content => {
        content.style.display = 'none';
      });

      // Show selected content
      const targetContent = document.getElementById(contentId);
      if (targetContent) {
