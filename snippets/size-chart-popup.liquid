<style>

  /* sizechart */
.size-chart-button {
  display: flex;
  align-items: center;
  cursor: pointer;
  background: none;
  border: none;
  padding: 0;
}

.size-chart-label {
  margin-left: 8px;
  font-weight: 500;
}

/* Overlay Backdrop */
.size-chart-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  z-index: 9998;
  display: none;
}

.size-chart-overlay.show {
  display: block;
}

/* Popup Modal */
.size-chart-popup {
  display: none;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  background-color: white;
  padding: 56px 20px 20px;
  border-radius: 16px 16px 0 0;
  max-height: 75vh;
  overflow-y: auto;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
  z-index: 9999;
}

.size-chart-popup.show {
  display: block;
}

/* Desktop Slide-Up Animation */
@media screen and (min-width: 768px) {
  .size-chart-popup {
    bottom: 0;
    animation: slideUp 0.4s ease-out forwards;
  }

  @keyframes slideUp {
    0% {
      transform: translateX(-50%) translateY(100%);
    }
    100% {
      transform: translateX(-50%) translateY(0);
    }
  }
}

/* Mobile Centered Modal */
@media screen and (max-width: 767px) {
  .size-chart-popup {
    top: 55%;
    bottom: auto;
    transform: translate(-50%, -50%);
    border-radius: 16px;
    width: 96%;
    max-height: 85vh;
    font-size: 0.95rem;
    padding: 64px 20px 24px;
  }
}

/* Compact Phones */
@media screen and (max-width: 425px) {
  .size-chart-popup {
    /* top: 62% !important; */
    width:100%;
    transform: translate(-50%, -50%) !important;
  }
}

@media screen and (max-width: 375px) {
  .size-chart-popup {
    top: 55% !important;
    width:100%;
    transform: translate(-50%, -50%) !important;
  }
}

@media screen and (max-width: 320px) {
  .size-chart-popup {
    top: 60%;
    width:100%
    transform: translate(-50%, -50%);
    max-height: 100vh;
    font-size: 0.9rem;
  }
}

/* Large Screens */
@media screen and (min-width: 1024px) {
  .size-chart-popup {
    max-width: 900px;
    font-size: 1rem;
  }
}

/* Title and Close Button */
.size-chart-title {
  position: absolute;
  top: 16px;
  left: 20px;
  right: 60px;
  font-size: 1.25rem;
  text-align: center;
  z-index: 10000;
}

.close-button {
  position: absolute;
  top: 16px;
  right: 16px;
  background: #eee;
  border: none;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  font-size: 18px;
  cursor: pointer;
  z-index: 10001;
}
</style>

{%- if product.metafields.custom.size_chart -%}
  <!-- Trigger -->
  <div class="size-chart">
    <button class="size-chart-button" onclick="toggleSizeChartPopup()" aria-label="Open Size Chart">
      <img src="https://cdn.shopify.com/s/files/1/0675/1997/1613/files/measuring-tape-icon.png?v=1746213060" alt="Size Chart" width="24" height="24" />
      <label class="size-chart-label">Size Chart</label>
    </button>
  </div>

  <!-- Overlay -->
  <div id="sizeChartOverlay" class="size-chart-overlay"></div>

  <!-- Modal -->
  <div id="sizeChartPopup" class="size-chart-popup" role="dialog" aria-modal="true">
    <button class="close-button" onclick="toggleSizeChartPopup()" aria-label="Close Size Chart">Ã—</button>
    <div class="content">
      <div class="size-chart-title">Size Chart</div>
      <img src="{{ product.metafields.custom.size_chart | image_url }}" alt="Size Chart" style="max-width: 100%;" />
    </div>
  </div>
{%- endif -%}
<script>
  function toggleSizeChartPopup() {
    const popup = document.getElementById("sizeChartPopup");
    const overlay = document.getElementById("sizeChartOverlay");
    const isOpen = popup.classList.toggle("show");

    overlay.classList.toggle("show", isOpen);
    document.body.style.overflow = isOpen ? 'hidden' : 'auto';
  }

  window.addEventListener('click', function(event) {
    const popup = document.getElementById("sizeChartPopup");
    const overlay = document.getElementById("sizeChartOverlay");
    if (event.target === overlay) {
      popup.classList.remove('show');
      overlay.classList.remove('show');
      document.body.style.overflow = 'auto';
    }
  });
</script>
