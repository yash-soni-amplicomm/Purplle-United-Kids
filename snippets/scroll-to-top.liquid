<div class="scroll-to-top">
  {% style %}
    .scroll_top {
      bottom: {{ settings.position_scroll_mobile | times: 3 | plus: 10 }}px;
    }
    @media(min-width: 768px) {
      .scroll_top {
        bottom: {{ settings.position_scroll | times: 3 | plus: 10 }}px;
      }
    }
  {% endstyle %}
  <div
    x-data="xScrollTop"
    @init-run.window="scrollFunction()"
    @scroll.window="scrollFunction()"
    class="{%- unless settings.enable_scroll_top_mobile -%}hidden{%- endunless -%}{% unless settings.enable_scroll_top_desktop %} md:hidden{% else %} md:block{% endunless %}"
  >
    <button 
      x-show="show" x-cloak 
      @click="scrollTop()" 
      class="scroll_top fixed z-50 pl-3 pr-3 pb-3 pt-3 w-11 h-11 md:w-14 md:h-14 md:pl-4 md:pt-4 md:pr-4 md:pb-4 border-0 rounded-full
        {%- if settings.position_scroll_top == 'left' %} left-5 rtl:left-auto rtl:right-5{% elsif settings.position_scroll_top == 'right' %} right-5 rtl:right-auto rtl:left-5{% else %} left-1/2 -translate-x-1/2{% endif -%}
        {%- if settings.svg_code_scroll_top == blank %} -rotate-90{% endif -%}
        {%- if settings.show_background_scroll_top %} button button-action{% else %} button-outline{% endif %}"
      x-transition:enter="transition-all ease-in-out duration-500"
      x-transition:enter-start="opacity-0 transform translate-y-1/3"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition-all ease-in-out duration-500"
      x-transition:leave-end="opacity-0 transform translate-y-1/3"
      aria-label="scroll top"
    >
      {% if settings.svg_code_scroll_top == blank %}
        {% render 'icon-alls', icon: 'icon-arrow' %}
      {% else %}
        {{ settings.svg_code_scroll_top }}
      {% endif %}
    </button>
  </div>
  <script>
    requestAnimationFrame(() => {
      document.addEventListener('alpine:init', () => {
        Alpine.data('xScrollTop', () => ({
          show: false,
          scrollTop() {
            window.scrollTo({top: 0, behavior: 'smooth'});
          },
          scrollFunction() {
            const position = window.innerWidth < 1025 ? 300 : 900;
            this.show = (document.body.scrollTop > position || document.documentElement.scrollTop > position)
              ? true : false;
          }
        }));
      });
    });
  </script>
</div>